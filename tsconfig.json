{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "/opt/*": ["src/layers/*"],  // Local development paths
      "/opt/nodejs/*":["node_modules/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist","scripts"]
}
